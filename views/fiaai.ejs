<div id="jTinder-wrapper-container ps-xs-2" class="container">    
    
    <div id="jTinder-container">
        
        <!-- start padding container -->
        <div class="wrap">
            <div id="like-overlay" class="overlay"></div>
            <div id="dislike-overlay" class="overlay"></div>
            <div id="banner-img"></div>
            <!-- start jtinder container -->
            
            <div id="tinderslide" class="invisible">
            <input type="hidden" name="len" id="len" value="<%=places.length%>">
                <ul>
                
                    <% for(var i = 0; i < places.length; i++){%>
                    <li class="pane pane<%= i + 1 %>" data-id="<%= places[i]._id %>">
                        <div class="img" style="background: url(<%= (places[i].image); %>) no-repeat scroll center center;background-size: cover;"></div>
                        <div><%= places[i].name %></div>
                        <div class="m-center h-100 w-50" style="position:absolute;"></div>
                        <div class="like"></div>
                        <div class="dislike"></div>
                    </li>
                    <% }%>
                </ul>
            </div>
            <!-- end jtinder container -->
        </div>
        <!-- end padding container -->
    
        <!-- jTinder trigger by buttons  -->
        <div class="actions">
            <a href="#" class="dislike"><i></i></a>
            <a href="#" class="like"><i></i></a>
        </div>
       
        <!-- jTinder status text  -->
        <!-- <div id="status"></div> -->
    </div>
</div>
<div class="container-sm mt-5">
    <p class="text-center subtitle"> 1st <span style="font-size:20px;">üç¥</span> to reach the most üëç wins!</p>
    <div class="row d-flex justify-content-around" style="height:200px">
        <div class="col border" style="height: 300px;">
            <div class="container">         
                <p class="leading pt-2">Users</p>   
               <hr class="my-2">
                <div>
                    <ul id="usersInRoom" class="list-unstyled">
                        <div class="row d-flex" id="<%= name%>-div">
                            <div class="col">
                                <li><strong><span id="myName"><%= name %></span></strong></li>
                            </div>
                            <div class="col">
                                <li><span class="badge bg-danger ready-status">Unready</span></li>
                            </div>
                        </div>
                      
                    </ul>
                </div>
            </div>
            <div id="readyBtnDiv" class="row w-75 mx-auto">
                <button id="toggleReadyBtn" class="btn btn-sm btn-outline-success btn-block">Ready?</button>
            </div>
        </div>
        <div class="col border" style="height: 300px;">

        </div>
    </div>
</div>

<div class="modal fade" id="myModal" tabindex="-1">
    <div class="modal-dialog modal-xl">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">ü•≥ And the Winner is...</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body d-flex flex-column">
          <h1 id="winner-name"></h1>
          <img id="winner-img" class="w-100 h-100">
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          <button type="button" class="btn btn-primary">Save changes</button>
        </div>
      </div>
    </div>
